---
import Tooltip from "./Tooltip.astro";
---

<article class="w-full grid grid-cols-6 grid-rows-6 gap-4">
  <section class="grid grid-rows-6 col-span-6 row-span-5 border bg-gray-100 dark:bg-black dark:bg-opacity-50 dark:border-purple-600 rounded-3xl">
    <header class="row-span-1 text-right px-5 py-5">
      <slot name="header" />
    </header>
    <section class="flex row-span-5 justify-start items-end px-8 pb-10">
      <slot name="description" />
    </section>
  </section>
  <section data-technologies data-cy="technologies" class="flex justify-center items-center col-span-5 row-span-1 px-3 py-3 border bg-gray-100 dark:bg-black dark:bg-opacity-50 dark:border-purple-600 rounded-3xl">
    <slot name="technologies" />
    <Tooltip id="technologies" className="absolute bg-purple-600 mt-32">
      <p>Tegnolog√≠as</p>
    </Tooltip>
  </section>
  <section data-experience class="flex justify-center items-center col-span-1 row-span-1 px-3 py-3 border bg-gray-100 dark:bg-black dark:bg-opacity-50 dark:border-purple-600 rounded-3xl">
    <slot name="experience" />
    <Tooltip id="experience" className="absolute bg-purple-600 mt-32">
      <p>Experiencia</p>
    </Tooltip>
  </section>
</article>