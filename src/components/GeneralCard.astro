---
import Tooltip from "./Tooltip.astro";
---

<article class="w-[800px] h-[1200px] lg:w-[500px] lg:h-[500px] grid grid-cols-6 grid-rows-6 gap-4">
  <section class="grid grid-rows-6 col-span-6 row-span-5 border bg-gray-100 dark:bg-black dark:bg-opacity-50 dark:border-purple-600 rounded-3xl">
    <header class="row-span-1 flex justify-end px-16 py-16 lg:px-5 lg:py-5">
      <slot name="header" />
    </header>
    <section class="flex row-span-5 justify-start items-end px-8 pb-10">
      <slot name="description" />
    </section>
  </section>
  <section data-technologies data-cy="technologies" class="flex justify-center items-center col-span-5 row-span-1 px-3 py-3 border bg-gray-100 dark:bg-black dark:bg-opacity-50 dark:border-purple-600 rounded-3xl">
    <slot name="technologies" />
    <Tooltip keyword="technologies" className="absolute bg-purple-600 text-[32px] lg:text-[16px]  px-6 py-3 lg:py-1.5 lg:px-3 mt-72 lg:mt-32">
      <p>Tegnolog√≠as</p>
    </Tooltip>
  </section>
  <section data-experience class="flex justify-center items-center col-span-1 row-span-1 border bg-gray-100 dark:bg-black dark:bg-opacity-50 dark:border-purple-600 rounded-3xl">
    <slot name="experience" />
    <Tooltip keyword="experience" className="absolute bg-purple-600 text-[32px] lg:text-[16px] px-6 py-3 lg:py-1.5 lg:px-3 mt-72 lg:mt-32">
      <p>Experiencia</p>
    </Tooltip>
  </section>
</article>